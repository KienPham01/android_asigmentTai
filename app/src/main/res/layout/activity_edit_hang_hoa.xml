<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditHangHoa"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Hàng Hóa"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tên hàng hóa"/>
        <EditText
            android:id="@+id/edttenhanghoaedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên hàng hóa"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nhà sản xuất"/>
        <EditText
            android:id="@+id/edtnhasanxuatedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nhà sản xuất"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Loại hàng"/>
        <EditText
            android:id="@+id/edtloaihangedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập loại hàng"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Giá"/>
        <EditText
            android:id="@+id/edtgiaedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tình trạng"/>
        <EditText
            android:id="@+id/edttinhtrangedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tình trạng"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">
        <Button
            android:id="@+id/btedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:textColor="#4CAF50"/>
        <Button
            android:id="@+id/bthuyedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="#4CAF50"/>

    </LinearLayout>

</LinearLayout>